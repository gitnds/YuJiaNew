<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="#FFFFFF"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical">

        <LinearLayout
            style="@style/LinearLayoutStyleHorizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_near_group_name"
                android:layout_width="0dp"
                android:padding="7dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="离当前地址最近的站点地址是沈河区大西路"
                android:textColor="@color/colorBlack"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="距离0.7公里"
                android:layout_margin="7dp"
                android:textColor="@color/colorBlackGray"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            style="@style/LinearLayoutStyleHorizontal"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/huaji"
                android:layout_margin="5dp"/>
           <TextView
               android:id="@+id/tv_near_detail_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="辽宁省沈阳市沈河区小西路太清宫街分公司49号"
            android:layout_margin="5dp"
            android:textColor="@color/colorBlackGray"
            android:textSize="16sp" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical"
                android:gravity="center">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/huaji"
                android:layout_margin="5dp"
                />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            style="@style/LinearLayoutStyleHorizontal"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/huaji"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="可自提可发货"
                android:layout_margin="5dp"
                android:textColor="@color/colorBlackGray"
                android:textSize="16sp" />

        </LinearLayout>
        <LinearLayout
            style="@style/LinearLayoutStyleHorizontal"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/huaji"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="024-22943853"
                android:layout_margin="5dp"
                android:textColor="@color/colorBluePeacock"
                android:textSize="16sp" />
        </LinearLayout>
        <TextView style="@style/style_horizontal_line_black"
            android:layout_marginTop="5dp"/>
        <LinearLayout
            style="@style/LinearLayoutStyleHorizontal"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:gravity="center">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/huaji"
                android:layout_margin="5dp"/>
            <TextView
                android:id="@+id/tv_go_to"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="到这去"
                android:gravity="center"
                android:layout_margin="5dp"
                android:textColor="@color/colorBlack"
                android:textSize="17sp" />
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="@color/colorALittleGray"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/huaji"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:text="立即下单"
                android:layout_margin="5dp"
                android:textColor="@color/colorBlack"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>