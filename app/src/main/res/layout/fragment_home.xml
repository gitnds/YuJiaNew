<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/first_title_bar"/>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="220dp">

        <android.support.v4.view.ViewPager
            android:id="@+id/hom_image_viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <com.shizhefei.view.indicator.FixedIndicatorView
            android:id="@+id/banner_indicator"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_gravity="right|bottom" />
    </FrameLayout>


    <LinearLayout
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <LinearLayout
            android:id="@+id/ll_1"
            style="@style/HomeF_ll_style">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:src="@mipmap/order"/>

            <TextView
                style="@style/HomeF_tv_style"
                android:text="我要下单"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_2"
            style="@style/HomeF_ll_style">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:src="@mipmap/premium"/>

            <TextView
                style="@style/HomeF_tv_style"
                android:text="货物追踪"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_3"
            style="@style/HomeF_ll_style">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:src="@mipmap/site"/>

            <TextView
                style="@style/HomeF_tv_style"
                android:text="网点查询"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/ll_4"
            style="@style/HomeF_ll_style">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:src="@mipmap/price"/>

            <TextView
                style="@style/HomeF_tv_style"
                android:text="时效价格"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_5"
            style="@style/HomeF_ll_style">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:src="@mipmap/record"/>

            <TextView
                style="@style/HomeF_tv_style"
                android:text="我发出的"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_6"
            style="@style/HomeF_ll_style">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:src="@mipmap/record"/>

            <TextView
                style="@style/HomeF_tv_style"
                android:text="发给我的"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="15dp"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/ll_7"
            style="@style/HomeF_ll_style">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:src="@mipmap/server"/>

            <TextView
                style="@style/HomeF_tv_style"
                android:text="服务介绍"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_8"
            style="@style/HomeF_ll_style">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:src="@mipmap/online_service"/>

            <TextView
                style="@style/HomeF_tv_style"
                android:text="客服电话"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_9"
            style="@style/HomeF_ll_style">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:src="@mipmap/claims"/>

            <TextView
                style="@style/HomeF_tv_style"
                android:text="@string/compen"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
